{
  "compilerOptions": {
    "lib": [
      "esnext"
    ],
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noEmitOnError": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "./lib/",
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules"
  ]
}